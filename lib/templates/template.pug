doctype html
html
  head
    meta(charset="utf-8")
    title site-checker
    style
      include index.css
  body
    div.container
      header
        h1 Site-Checker Result
        .info 
          | Generated at 
          b #{timestamp}
          if !!device
            br
            | Emurate 
            b #{device}
      table
        thead
          tr
            td ID
            td Screenshot
            td.status Status
            td Title / URL
        tbody
          each site in sites
            tr
              td.id(rowspan=2) #{site.id}
              td.capture(rowspan=2)
                if (site.status == "200")
                  a(href=site.filename, target='_blank')
                    img.capture(src=site.filename)
                else
                  p.no-image NO IMAGE
              td.status(rowspan=2) #{site.status}
              td: div.title #{site.title}
            tr
              td
                div.url: a(href=site.url, target="_blank") #{site.url}
      footer
        | Generated by 
        a(href="https://github.com/HeRoMo/site-checker", target="_blank") Site-Checker
    script
      include index.js
