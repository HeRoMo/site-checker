doctype html
html
  head
    meta(charset="utf-8")
    title site-checker
    style
      include index.css
  body
    div.container
      header
        h1 Site-Checker Result
        .info 
          | Generated at 
          b #{timestamp}
          if !!device
            br
            | Emurate 
            b #{device}
      table
        thead
          tr
            td ID
            td Screenshot
            td.status Status
            td Title / Request URL / Response URL
        tbody
          each site in sites
            tr
              td.id(rowspan=3) #{site.id}
              td.capture(rowspan=3)
                if (site.status == "200")
                  a(href=site.screenshot_file, target='_blank')
                    img.capture(src=site.screenshot_file)
                else
                  p.no-image NO IMAGE
              td.status(rowspan=3) #{site.status}
              td
                if (site.status == 'ERROR')
                  div.error #{site.error_message}
                else
                  div.title #{site.title}
            tr
              td
                div.url
                  | REQ: 
                  a(href=site.url, target="_blank") #{site.url}
            tr
              td
                div.url
                  | RES: 
                  a(href=site.response_url, target="_blank") #{site.response_url}
      footer
        | Generated by 
        a(href="https://github.com/HeRoMo/site-checker", target="_blank") Site-Checker
    script
      include index.js
